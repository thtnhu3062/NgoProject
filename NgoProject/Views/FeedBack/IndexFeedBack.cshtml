@model IEnumerable<NgoProject.Models.Feedback>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "News";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.AntiForgeryToken()

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Feedback</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                FeedbackPhone
                            </th>
                            <th>
                                FeedbackEmail
                            </th>
                            <th>
                                FeedbackMessage
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                        @Html.DisplayFor(modelItem => item.FeedbackPhone)
                                </td>
                                <td>
                                        @Html.DisplayFor(modelItem => item.FeedbackEmail)
                                </td>
                                <td style="white-space:pre-line" >
                                        @Html.DisplayFor(modelItem => item.FeedbackMessage)
                                </td>

                                    @*<td>
                            <a href="@Url.Action("NewsEdit","News", new {id = item.NewsId})">Edit</a> |
                            <a href="@Url.Action("DeleteNews","News", new {id = item.NewsId})">Delete</a>
                            </td>
                            *@
                            </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>