@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model NgoProject.Models.Ienumerable

@{
    ViewData["Title"] = "IndexAboutUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="interior-design">
    <div class="container expanded">
        <div class="row">
            <div class="col-lg-6">
                <br>
                @foreach (var item in Model.Abu!)
                {
                    <div class="section-heading">
                        <h2> @Html.DisplayFor(modelItem => item.Title)</h2>
                    </div>
                    <div class="left-image">
                        <img style="transform: translate(-120px,0px)" src="~/admin/uploads/@item.Image">
                    </div>
                }
                <br />
            </div>

            <div class="col-lg-6  align-self-center">
                <div class="right-content">
                    @foreach (var item in Model.Abu)
                    {
                        <p style="text-align:center; font-size:medium">
                            @item.Content
                        </p>
                    }
                    <div class="accordion" id="accordionExample">
                        @foreach (var item in Model.questionAbouts!)
                        {
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                        @Html.DisplayFor(modelItem => item.Question)
                                    </button>
                                </h2>
                                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <p>@Html.DisplayFor(modelItem => item.Answer)</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<br />

