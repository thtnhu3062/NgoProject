@model IEnumerable<NgoProject.Models.News>

    @{
    ViewData["Title"] = "SearchNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }



<section class="about-section section-padding">
    <br /> <br />
    <div class="col-lg-10 col-12 text-center mx-auto">
        <h2 class="">Ngo's Causes</h2>
    </div>
    <br /> <br />
    <div class="container">
        <div class="row">
            @using (Html.BeginForm("SearchNews", "User", FormMethod.Get))
            {
                <p class="col-md-7">
                    @Html.TextBox("SearchString") <input class="btn btn-outline-secondary bg-white border-start-0 border-bottom-0 border ms-n5" type="submit" value="Search" />

                </p>
            }
            @foreach (var item in Model)
            {
                <div class="col-lg-6 col-md-5 col-12">
                    <a href="@Url.Action("DetailsNews","User", new {id = item.NewsId})">
                        <img src="~/user/images/slide/@item.NewsImage1" class="about-image ms-lg-auto bg-light shadow-lg img-fluid" alt="" style="width:500px; height:400px;">
                    </a>

                </div>
                <br />

                <div class="col-lg-5 col-md-7 col-12">
                    <div class="custom-text-block">
                        <h2 class="mb-0"><a href="@Url.Action("DetailsNews","User", new {id = item.NewsId})" class="d-block">@item.NewsName</a> </h2>

                        <p class="text-muted mb-lg-4 mb-md-4"><a href="@Url.Action("DetailsNews","User", new {id = item.NewsId})" class="d-block">@item.NewsContent</a></p>

                        <p><a href="@Url.Action("DetailsNews","User", new {id = item.NewsId})" class="d-block">@item.NewsDescription</a></p>

                    </div>
                </div>
                
            }
            <br /> <br />    <br /> <br />
            
        </div>


    </div>
</section>

