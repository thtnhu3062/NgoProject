@model IEnumerable<NgoProject.Models.Donate>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Donate";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">List Of Donate</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <thead>
                        <tr>
                            <th>
                                    Full Name
                            </th>
                            <th>
                                    News Name
                            </th>
                            <th>
                                    Date Donate
                            </th>
                            <th>
                                    Money Donate
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                    <tbody>
                                @foreach (var item in Model)
                                {
                            <tr>
                                <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                            @Html.DisplayFor(modelItem => item.News.NewsName)
                                </td>
                                <td>
                                            @Html.DisplayFor(modelItem => item.DonateDate)
                                </td>
                                <td>
                                            @Html.DisplayFor(modelItem => item.DonateMoney)
                                </td>


                            </tr>
                                }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

