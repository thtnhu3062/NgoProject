@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<NgoProject.Models.Category>

@{
    ViewData["Title"] = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@Html.AntiForgeryToken()
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">List Of Category</h4>
            <p>@TempData["Message"]</p>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">

                    <thead>
                        <tr>
                            <th>
                                    @Html.DisplayNameFor(model => model.CategoryName)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.CategoryDescription)
                            </th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            int i = 0;
                            string @cls = "table-success";
                        }
                        @foreach (var item in Model)
                        {
                            i = i + 1;
                            cls = "table-warning";
                            if(i % 2 == 0)
                            {
                                cls = "table-primary";
                            }
                        
                            <tr class="@cls">
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryDescription)
                                </td>
                                <td>
                                    <a asp-action="EditCategory" asp-route-id="@item.CategoryId">Edit</a>
                                   
                                </td>
                                <td>
                                    <a href="@Url.Action("DeleteCategory","HomeAdmin", new {id = item.CategoryId})">Delete</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
