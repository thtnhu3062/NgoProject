@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model NgoProject.Models.Ienumerable
@{
    ViewData["Title"] = "Banner";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.AntiForgeryToken()
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Banner</h4>
            <p class="card-description">
                <code>This banner can be edited</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Id</th>
                            <th>  Title</th>
                            <th> Content</th>

                            <th>  Iamge</th>
                            <th> Action</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        
                            @foreach (var item in Model.Bn1!)
                            {


                            <tr>
                                <td>
                                        @Html.DisplayFor(modelItem => item.IdOne)
                                </td>
                                <td>
                                        @Html.DisplayFor(modelItem => item.TitleOne)
                                </td>
                                <td>
                                        @Html.DisplayFor(modelItem => item.ContentOne)
                                <td>
                                    <img src="~/user/images/slide/@item.ImageOne" style="width:100px ; height:auto ; border-radius: 10%;">
                                </td>

                                <td>
                                    <a asp-action="BannerEdit" asp-route-id="@item.IdOne">Edit</a>

                                </td>
                               

                            </tr>
                            }
                        @foreach (var item in Model.Bn2!)
                        {


                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdTwo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TitleTwo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContentTwo)
                                <td>
                                    <img src="~/user/images/slide/@item.ImageTwo" style="width:100px ; height:auto ;border-radius: 10%;">
                                </td>

                                <td>
                                    <a asp-action="BannerEdit2" asp-route-id="@item.IdTwo">Edit</a>
                                    <a asp-action="DeleteBanner" asp-route-id="@item.IdTwo">Delete</a>

                                </td>


                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>