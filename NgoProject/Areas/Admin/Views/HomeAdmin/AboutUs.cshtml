@model NgoProject.Models.Ienumerable
@{
    ViewData["Title"] = "AboutUs";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.AntiForgeryToken()
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">About Us</h4>
            <p class="card-description">
                <code>About Us</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Image</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Abu!)
                        {


                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td style="white-space:pre-line">
                                    @Html.DisplayFor(modelItem => item.Content)
                                <td>
                                    <img src="~/user/images/slide/@item.Image" style="width:100px ; height:auto ; border-radius: 10%;">
                                </td>

                                <td>
                                    <a style="text-decoration:none" href="@Url.Action("EditAbout","HomeAdmin", new {id = item.Id})">Edit |</a>
                                    <a style="text-decoration:none" href="@Url.Action("DeleteAbout","HomeAdmin", new {id = item.Id})">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.questionAbouts!)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Question)
                                </td>
                                <td style="white-space:pre-line">
                                    @Html.DisplayFor(modelItem => item.Answer)
                                <td>
                                    <a style="text-decoration:none" href="@Url.Action("EditQuestion","HomeAdmin", new {id = item.Id})">Edit |</a>
                                    <a style="text-decoration:none" href="@Url.Action("DeleteQuestion","HomeAdmin", new {id = item.Id})">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>






