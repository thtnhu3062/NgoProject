@model NgoProject.ViewModel.ViewModelOurPartner
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "OurPartnerEdit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="row">
    <div class="col-md-4">
        <form asp-action="OurPartnerEdit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OurpartnerId" />
            <div class="form-group">
                <label asp-for="OurpartnerName" class="control-label">Partner Name<span style="color:red">*</span></label>
                <span asp-validation-for="OurpartnerName"  class="text-danger"></span>
                <input asp-for="OurpartnerName"  class="form-control" />
               
            </div>
            <div class="form-group">
                <label asp-for="OurpartnerAddress" class="control-label">Partner Address<span style="color:red">*</span></label>
                <span asp-validation-for="OurpartnerAddress" class="text-danger"></span>
                <input asp-for="OurpartnerAddress"  class="form-control" />
               
            </div>
            <div class="form-group">
                <label asp-for="OurpartnerLogo" class="control-label">Partner Logo<span style="color:red">*</span></label>
                <span asp-validation-for="OurpartnerLogo" class="text-danger"></span>
                <input type="file" asp-for="OurpartnerLogo"  class="form-control" value="" />
             
            </div>
            <div class="form-group">
                <label asp-for="OurpartnerPhone" class="control-label">Partner Phone<span style="color:red">*</span></label>
                <span asp-validation-for="OurpartnerPhone" class="text-danger"></span>
                <input asp-for="OurpartnerPhone"  class="form-control" />
             
            </div>
            <div class="form-group">
                <label asp-for="OurpartnerAddressWeb" class="control-label">Partner Address Web </label>
                <span asp-validation-for="OurpartnerAddressWeb" class="text-danger"></span>
                <input asp-for="OurpartnerAddressWeb" required class="form-control" />
             
            </div>
            <div class="form-group">
                <label asp-for="OurpartnerMail" class="control-label">Partner Mail<span style="color:red">*</span></label>
                <span asp-validation-for="OurpartnerMail" class="text-danger"></span>
                <input asp-for="OurpartnerMail" required class="form-control" />
              
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>