@model IEnumerable<NgoProject.Models.QuestionAbout>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AboutUs";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.AntiForgeryToken()
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">About Us</h4>
            @*<p class="card-description">
                <code>About Us Question</code>
            </p>*@
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Question</th>
                            <th>Answer</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Question)
                                </td>
                                <td style="white-space:pre-line">
                                    @Html.DisplayFor(modelItem => item.Answer)
                                <td>
                                    <a style="text-decoration:none" class="btn btn-primary" href="@Url.Action("EditQuestion","HomeAdmin", new {id = item.Id})">Edit </a>
                                    <a style="text-decoration:none" class="btn btn-danger" href="@Url.Action("DeleteQuestion","HomeAdmin", new {id = item.Id})">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
