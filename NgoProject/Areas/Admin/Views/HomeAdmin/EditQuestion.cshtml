@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model NgoProject.ViewModel.ViewModelQuestionAbout

@{
    ViewData["Title"] = "AboutUsQuestionEdit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">About Us</h4>
            <p class="card-description">
                Don't leave the background blank
            </p>

            <form class="forms-sample" asp-action="EditQuestion" method="post">

                <div class="form-group" hidden>
                    <label for="exampleInputName1" asp-for="Id">ID</label>
                    <input type="text" class="form-control" asp-for="Id">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1" asp-for="Question">Question<span style="color:red">*</span></label>
                    <span asp-validation-for="Question" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Question" name="Question">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1" asp-for="Answer">Answer<span style="color:red">*</span></label>
                    <span asp-validation-for="Answer" class="text-danger"></span>
                    <input type="text" style="width:100% ;height:100px" class="form-control" asp-for="Answer" name="Answer">
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <button class="btn btn-light"><a asp-action="Question" style="text-decoration:none">Back To List</a></button>
                </div>
            </form>
        </div>

    </div>
</div>