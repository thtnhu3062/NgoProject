@model IEnumerable<NgoProject.Models.News>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "News";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.AntiForgeryToken()
<h1>News</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NewsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsImage1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ourpartner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NewsName)
            </td>
                <td>
                    <img src="~/user/images/slide/@item.NewsImage1" style="width:100px ; height:auto ; border-radius: 10%;">
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewsContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewsDescription)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Category!.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ourpartner!.OurpartnerName)
            </td>
            <td>
                    <a href="@Url.Action("NewsEdit","News", new {id = item.NewsId})">Edit</a> |
                    <a href="@Url.Action("DeleteNews","News", new {id = item.NewsId})">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
