@model IEnumerable<NgoProject.Models.News>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "News";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.AntiForgeryToken()




<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">News</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <thead>
                        <tr>
                            <th>
                                    @Html.DisplayNameFor(model => model.NewsName)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.NewsImage1)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.NewsContent)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.NewsDescription)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.Category)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.Ourpartner)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    <tbody>
                                @foreach (var item in Model)
                                {
                            <tr>
                                <td>
                                            @Html.DisplayFor(modelItem => item.NewsName)
                                </td>
                                <td>
                                    <img src="~/user/images/slide/@item.NewsImage1" style="width:100px ; height:auto ; border-radius: 10%;">
                                </td>
                                <td>
                                            @Html.DisplayFor(modelItem => item.NewsContent)
                                </td>
                                <td>
                                            @Html.DisplayFor(modelItem => item.NewsDescription)
                                </td>
                                <td>
                                            @Html.DisplayFor(modelItem => item.Category!.CategoryName)
                                </td>
                                <td>
                                            @Html.DisplayFor(modelItem => item.Ourpartner!.OurpartnerName)
                                </td>
                                <td>
                                    <a class="btn btn-dark btn-icon-text" href="@Url.Action("NewsEdit","News", new {id = item.NewsId})">Edit</a> |
                                    <a class="btn btn-danger btn-icon-text" href="@Url.Action("DeleteNews","News", new {id = item.NewsId})">Delete</a>
                                </td>

                            </tr>
                                }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
