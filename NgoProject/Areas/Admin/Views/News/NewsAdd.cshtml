@model NgoProject.ViewModel.ViewModelNews

@{
    ViewData["Title"] = "NewsAdd";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h4>NewsAdd</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewsAdd"method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewsName" class="control-label">NewsName</label>
                <input asp-for="NewsName" class="form-control" />
                <span asp-validation-for="NewsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsImage1" class="control-label">NewsImage1</label>
                <input asp-for="NewsImage1" type="file" class="form-control" />
                <span asp-validation-for="NewsImage1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsContent" class="control-label">NewsContent</label>
                <input asp-for="NewsContent" class="form-control" />
                <span asp-validation-for="NewsContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsDescription" class="control-label">NewsDescription</label>
                <input asp-for="NewsDescription" class="form-control" />
                <span asp-validation-for="NewsDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">CategoryName</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OurpartnerId" class="control-label">OurpartnerName</label>
                <select asp-for="OurpartnerId" class="form-control" asp-items="ViewBag.OurpartnerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

